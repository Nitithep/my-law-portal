generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── NextAuth Models ────────────────────────────────────────────────
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Application Models ─────────────────────────────────────────────
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(CITIZEN)
  accounts      Account[]
  sessions      Session[]
  votes         Vote[]
  comments      Comment[]
  surveyResponses SurveyResponse[]
}

model LawDraft {
  id          String      @id @default(cuid())
  title       String
  description String      @db.Text
  status      LawStatus   @default(OPEN)
  startDate   DateTime
  endDate     DateTime
  agency      String
  sections    LawSection[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  category        String      @default("General")
  image           String?
  affectedParties String?
  hearingTime     String?
  projectDetails  String?     @db.Text
  version         Int         @default(1)
  hearingSummary  String?     @db.Text
  hearingSummaryPublished Boolean @default(false)
  surveyQuestions SurveyQuestion[]
  attachments     DraftAttachment[]
}

model DraftAttachment {
  id         String   @id @default(cuid())
  lawDraftId String
  lawDraft   LawDraft @relation(fields: [lawDraftId], references: [id], onDelete: Cascade)
  fileName   String
  fileUrl    String
  createdAt  DateTime @default(now())
}

model LawSection {
  id         String   @id @default(cuid())
  lawDraftId String
  lawDraft   LawDraft @relation(fields: [lawDraftId], references: [id], onDelete: Cascade)
  sectionNo  String
  content    String   @db.Text
  votes      Vote[]
  comments   Comment[]
}

model Vote {
  id        String     @id @default(cuid())
  userId    String?
  sectionId String
  sessionId String
  type      VoteType
  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  section   LawSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, sectionId])
}

model Comment {
  id        String     @id @default(cuid())
  content   String     @db.Text
  userId    String
  sectionId String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  section   LawSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
}

model SurveyQuestion {
  id          String         @id @default(cuid())
  lawDraftId  String
  lawDraft    LawDraft       @relation(fields: [lawDraftId], references: [id], onDelete: Cascade)
  question    String
  order       Int            @default(0)
  responses   SurveyResponse[]
}

model SurveyResponse {
  id               String         @id @default(cuid())
  surveyQuestionId String
  surveyQuestion   SurveyQuestion @relation(fields: [surveyQuestionId], references: [id], onDelete: Cascade)
  userId           String?
  user             User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionId        String
  answer           String         // "AGREE" | "DISAGREE"
  comment          String?        @db.Text
  createdAt        DateTime       @default(now())

  @@unique([sessionId, surveyQuestionId])
}

// ─── Enums ──────────────────────────────────────────────────────────
enum Role {
  CITIZEN
  ADMIN
}

enum LawStatus {
  OPEN
  CLOSED
}

enum VoteType {
  AGREE
  DISAGREE
}
